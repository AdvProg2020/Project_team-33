<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CommentsMenuController">
    <children>
        <TableView fx:id="tableView" prefHeight="327.0" prefWidth="600.0" style="-fx-background-color: Grey">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="75.0" text="name"/>
                <TableColumn fx:id="commentColumn" prefWidth="347.0" text="comment"/>
                <TableColumn fx:id="hasBeenBought" minWidth="0.0" prefWidth="113.0" text="has been bought"/>
            </columns>
        </TableView>
        <TextField fx:id="comment" layoutX="7.0" layoutY="333.0" prefHeight="61.0" prefWidth="532.0" promptText="write your comment..."/>
        <Button layoutX="548.0" layoutY="350.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="44.0" onMouseClicked="#addComment">
            <graphic>
                <ImageView fitHeight="22.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@images/blue-plus-icon.png"/>
                </ImageView>
            </graphic>
        </Button>
    </children>
</AnchorPane>